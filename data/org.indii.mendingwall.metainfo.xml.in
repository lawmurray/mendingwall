<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.indii.mendingwall</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Mending Wall</name>
  <summary>Hop between desktop environments, enjoy them all</summary>
  <description>
    <p>Linux distributions offer a choice of desktop environment, but installing more than one can break themes and clutter menus. Mending Wall fixes this.</p>
  </description>

  <developer id="org.indii">
    <name>Lawrence Murray</name>
  </developer>

  <!-- Requered: Should be a link to the upstream homepage for the component -->
  <url type="homepage">https://mendingwall.indii.org/</url>
  <!-- Recommended: It is highly recommended for open-source projects to display the source code repository -->
  <url type="vcs-browser">https://github.com/lawmurray/mendingwall</url>
  <!-- Should point to the software's bug tracking system, for users to report new bugs -->
  <url type="bugtracker">https://github.com/lawmurray/mendingwall/issues</url>
  <!-- URLs of this type should point to a webpage where users can submit or modify translations of the upstream project -->
  <url type="translate">https://github.com/lawmurray/mendingwall</url>
  <!-- Should link a FAQ page for this software, to answer some of the most-asked questions in detail -->
  <url type="faq">https://mendingwall.indii.org/faq</url>
  <!--Sould provide a web link to an online user's reference, a software manual or help page -->
  <url type="help">https://mendingwall.indii.org</url>
  <!-- URLs of this type should point to a webpage showing information on how to donate to the described software project -->
  <url type="donation">https://github.com/sponsors/lawmurray</url>
  <!--This could for example be an HTTPS URL to an online form or a page describing how to contact the developer -->
  <url type="contact">https://indii.org/about</url>
  <!--URLs of this type should point to a webpage showing information on how to contribute to the described software project -->
  <url type="contribute">https://mendingwall.indii.org/contributing</url>

  <translation type="gettext">mendingwall</translation>
  <!-- All graphical applications having a desktop file must have this tag in the MetaInfo.
     If this is present, appstreamcli compose will pull icons, keywords and categories from the desktop file. -->
  <launchable type="desktop-id">org.indii.mendingwall.desktop</launchable>
  <!-- Use the OARS website (https://hughsie.github.io/oars/generate.html) to generate these and make sure to use oars-1.1 -->
  <content_rating type="oars-1.1" />

  <!-- Applications should set a brand color in both light and dark variants like so -->
  <branding>
    <color type="primary" scheme_preference="light">#dc8add</color>
    <color type="primary" scheme_preference="dark">#613583</color>
  </branding>

  <screenshots>
    <screenshot type="default">
      <image>https://mendingwall.indii.org/assets/screenshot_dark.png</image>
      <caption>Mending Wall application, dark mode.</caption>
    </screenshot>
    <screenshot>
      <image>https://mendingwall.indii.org/assets/screenshot_light.png</image>
      <caption>Mending Wall application, light mode.</caption>
    </screenshot>
  </screenshots>

  <provides>
    <binary>mendingwall</binary>
    <binary>mendingwalld</binary>
  </provides>

  <releases>
    <release version="0.3.1" date="2025-03-03">
      <url type="details">https://github.com/lawmurray/mendingwall/releases/tag/v0.3.1</url>
      <description translate="no">
        <p>Fixed background process not terminating at end of KDE session under some configurations. Fixed by removing libportal dependency and replacing with the session management encoded in GtkApplication.</p>
      </description>
    </release>

    <release version="0.3.0" date="2025-02-26">
      <url type="details">https://github.com/lawmurray/mendingwall/releases/tag/v0.3.0</url>
      <description translate="no">
        <ul>
          <li>Tweaks to applications affected by Tidy Menus feature.</li>
          <li>Added Default group to themes.conf file, enabling support for desktop environments with any XDG_CURRENT_DESKTOP value.</li>
          <li>Added mendingwallcli command-line interface, intended mostly for automated testing.</li>
          <li>Reorganized some code to ease Flatpak and Snap packaging.</li>
        </ul>
      </description>
    </release>

    <release version="0.2.0" date="2025-02-11">
      <url type="details">https://github.com/lawmurray/mendingwall/releases/tag/v0.2.0</url>
      <description translate="no">
        <p>Uses libportal for desktop session integration.</p>
      </description>
    </release>

    <release version="0.1.1" date="2025-02-07">
      <url type="details">https://github.com/lawmurray/mendingwall/releases/tag/v0.1.1</url>
      <description translate="no">
        <p>Fixes some unnecessary copying of desktop entries.</p>
      </description>
    </release>

    <release version="0.1.0" date="2025-02-01">
      <url type="details">https://github.com/lawmurray/mendingwall/releases/tag/v0.1.0</url>
      <description translate="no">
        <p>Initial release.</p>
        <ul>
          <li>Includes <em>Mend Themes</em> feature.</li>
          <li>Includes <em>Tidy Menus</em> feature.</li>
          <li>Supports GNOME, KDE, Cinnamon and Xfce.</li>
        </ul>
      </description>
    </release>
  </releases>

</component>
