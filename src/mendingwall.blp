using Gtk 4.0;
using Adw 1;

Adw.ApplicationWindow mendingwall {
  title: _("Mending Wall");
  width-request: 400;

  Box {
    orientation: vertical;

    Adw.HeaderBar {
      //
    }

    Adw.StatusPage {
      icon-name: "org.indii.mendingwall";
      title: _("Mending Wall");
      description: _("Good Fences Make Good Neighbors");

      Adw.Clamp clamp {
        maximum-size: 600;

        Box {
          orientation: vertical;

          ListBox {
            selection-mode: none;

            styles [
              "boxed-list"
            ]

            Adw.SwitchRow menus {
              title: _("Manage Menus");
              subtitle: _("Show core applications in their native desktop environment only");
            }

            Adw.SwitchRow themes {
              title: _("Protect Themes");
              subtitle: _("Prevent theme interference between desktop environments");
            }

            Adw.ActionRow {
              title: _("Restore Default GNOME Theme");
              subtitle: _("Use if the GNOME theme is already broken");

              [suffix]
              Button {
                label: _("Restore");
                valign: center;
                clicked => $restore_theme_confirm(mendingwall);
              }
            }
          }
        }
      }
    }
  }
}
