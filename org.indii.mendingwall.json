{
    "id" : "org.indii.mendingwall",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "mendingwall",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-config/autostart",
        "--filesystem=xdg-data/applications:create",
        "--filesystem=xdg-data/flatpak/exports/share:ro",
        "--filesystem=/var/lib/flatpak/exports/share:ro",
        "--filesystem=/var/lib/snapd/desktop/applications:ro",
        "--filesystem=host-os:ro",
        "--talk-name=org.gnome.SessionManager"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
          "name": "blueprint-compiler",
          "buildsystem": "meson",
          "cleanup": ["*"],
          "sources": [
            {
              "type": "git",
              "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
              "tag": "v0.16.0"
            }
          ]
        },
        {
            "name" : "mendingwall",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type": "git",
                    "url": "https://github.com/lawmurray/mendingwall",
                    "tag": "v0.1.0"
                }
            ]
        }
    ]
}
